{
  "types": ["node", "jest"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "declaration": true,
    "jsx": "react-jsx",
    "paths": {
      "utils/*": [
        "./packages/utils/*"
      ],
      "config/*": [
        "./packages/config/*"
      ],
      "hooks/*": [
        "./packages/hooks/*"
      ],
      "components/*": [
        "./packages/components/*"
      ],
      "types/*": [
        "./packages/types/*"
      ]
    }
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": ["node_modules", ".vscode"],

}
